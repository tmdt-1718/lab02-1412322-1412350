  <div class="row">
      <%= render 'layouts/sidebar', user: current_user%>
    <div class="wrapper">
      <div class="card">
        <%@inbox_messages.each do |message|%>
          <%if message.seen_at.present?%>
          <div class="row seen">
            <div class="col-lg-3">
              <%=message.get_conversation(message.conversation_id).opposed_user(current_user).name%>
            </div>
            <div class="col-lg-7">
              <%=message.content%>
            </div>
            <div class="col-lg-2" style="text-align: right">
              <%= message.get_time(message.created_at)%>
            </div>
          </div>
          <%else%>
          <div class="row unseen" style="font-weight: bold">
            <div class="col-lg-3">
              <%=message.get_conversation(message.conversation_id).opposed_user(current_user).name%>
            </div>
            <div class="col-lg-7">
              <%=message.content%>
            </div>
            <div class="col-lg-2" style="text-align: right">
              <%= message.get_time(message.created_at)%>
            </div>
          </div>
          <%end%>
          <hr>         
        <%end%>
      </div><
    </div>
  </div>