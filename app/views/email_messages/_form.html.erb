<%= form_for @email_message, url: user_email_messages_path(current_user), html: {class: "content-form"}, method: :post do |f| %>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, @users.order(:email), :id, :email, {}, {:multiple => true}%>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content%>
  </div>
  <div class="field">
    <%= f.label :url, "Choose an image to send" %><br />
    <%= f.file_field :url %>
  </div>
  </br>
  <div class="actions text-center">
    <%= f.submit "Send message", class: "tertiary-button" %>
  </div>
<% end %>