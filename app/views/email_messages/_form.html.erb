<%= form_for @email_message, url: user_email_messages_path(current_user), method: :post do |f| %>
  <div class="field">
    <%= f.collection_select :user_id, User.all.where.not(id: current_user).order(:email), :id, :email,{:prompt => "Select friends to send messages"},{:multiple => true}%>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, class:"content-field" %>
  </div>
  <div class="field">
    <%= f.label :url, "Choose an image to send" %><br />
    <%= f.file_field :url %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Send message", class: "primary-button" %>
  </div>
<% end %>