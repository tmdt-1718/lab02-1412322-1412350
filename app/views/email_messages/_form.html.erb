<%= form_for @email_message, url: user_email_messages_path(current_user), method: :post do |f| %>
  <div class="field">
    <%= f.label :recipient_id %><br />
    <%= f.collection_select :recipient_id, User.all.where.not(id: current_user).order(:name), :id, :name, {:multiple => true}%>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.file_field :url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>