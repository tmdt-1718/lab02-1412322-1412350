<h1> Welcome <%=@user.name%> </h1>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
<div class="row">
  <div class="col-lg-4">
      <div class="card">
          <div class="card-header bg-primary">
               <h3 class="card-title">User list</h3>
          </div>
          <div class="card-body">
            <ul class="friend-list">
              <% @users.each do |user| %>
                <li>
                  <%= link_to conversations_path(user_id: user), remote: true, method: :post do %>
                	<div class="clearfix">
                		<img src="https://bootdey.com/img/Content/user_1.jpg" alt="" class="rounded-circle">
                		<div class="friend-name">	
                			<strong><%=user.name%></strong>
                		</div>
                		<div class="last-message text-muted"><%= @user.get_conversation_last_message(user.id, @user.id)%> </div>
                		<small class="time text-muted"><%=@user.get_conversation_last_message(user.id, @user.id) == 'Has no message yet' ? 'Invalid' : (time_ago_in_words @user.get_conversation(user.id, @user.id).messages.last.created_at)%></small>
                		<small class="chat-alert label label-danger">1</small>
                	</div>
                  <%end%>
                </li>
              <% end %> 
            </ul>
          </div>
      </div>
  </div>
  <div class="col-lg-8">
      <ul id="conversations-list">
        <% @conversations.each do |conversation| %>
          <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
        <% end %>
      </ul>
  </div> 
</div>
