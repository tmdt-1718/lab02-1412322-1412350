<h1> Welcome <%=@user.name%> </h1>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
<div class="row">
<div class="col-lg-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
</div>
<div class="col-lg-3">
    <div class="card bg-primary">
        <div class="card-header">
             <h3 class="card-title">User list</h3>
        </div>
        <div class="card-body">
          <ul>
            <% @users.each do |user| %>
            <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %> 
          </ul>
        </div>
    </div>
</div>
</div>
