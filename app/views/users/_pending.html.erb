<div class="col-sm-6 float-right">
<% if current_user.is_active(current_user, user) %>
  <%= link_to "Cancel friend request", user_relationship_path(current_user, current_user.get_relationship(current_user, user)), class: "btn btn-primary", method: :delete, remote: true%>
<% else %>
  <%= link_to "Accept friend request", user_relationship_path(current_user, current_user.get_relationship(current_user, user)), class: "btn btn-primary", method: :put, remote: true%>
<%end%>
</div>