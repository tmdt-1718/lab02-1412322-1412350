<div class="row">
  <div class="col-md-3">
    <%= render 'layouts/sidebar', user: current_user%>
  </div>
  <div class="col-md-9">
    <div class="sidebar-content">
      <h3><i class="fa-fw fa fa-users"></i> Users List</h3>
      <div class="friend-list">
        <% @users.each do |user| %>
            <div class="friend-block row">
              <div class="friend-info col-md-6 d-flex align-items-center">
                <%= image_tag asset_url("defaultavatar.png"), class:"img-fluid" %>
                <%=user.name%>
              </div>
              <div class="friend-action col-md-6 text-center d-flex align-items-center">
                <% if current_user.is_unfriend(user, current_user)%>
                  <%= render 'no_relationship', user: user%>
                <%else%>
                  <%= render 'has_relationship', user: user%>
                <%end%>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
