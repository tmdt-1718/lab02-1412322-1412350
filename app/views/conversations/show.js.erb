var conversation = $('#conversations-list');
if (conversation.length !== 0) {
  conversation.html("<%= j(render 'conversations/conversation_container', conversation: @conversation, user: current_user) %>");
}
var conversations = conversation.find("[data-conversation-id='" + "<%= @conversation.id %>" + "']");
var messages_list = conversations.find('.messages-list');
var height = messages_list[0].scrollHeight;
messages_list.parent().scrollTop(height);